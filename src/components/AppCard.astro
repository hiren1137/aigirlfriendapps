---
interface Props {
  app: {
    id: number;
    name: string;
    slug: string;
    tagline: string;
    bestFor: string;
    description: string;
    logo: string;
    rating: number;
    website: string;
    pricing: {
      free: boolean;
      starting: string;
      premium: string;
    };
    whatMakesDifferent: string[];
    pros: string[];
    cons: string[];
    bestFit: string;
    affiliateUrl: string;
    category: string;
    isEditorChoice: boolean;
    badge: string;
  };
  rank: number;
}

const { app, rank } = Astro.props;

// Generate stars
const fullStars = Math.floor(app.rating);
const hasHalfStar = app.rating % 1 >= 0.5;
const emptyStars = 5 - fullStars - (hasHalfStar ? 1 : 0);
---

<article class="app-card" id={app.slug}>
  <div class="card-rank">#{rank}</div>
  
  {app.badge && (
    <div class="card-badge">
      <span class={`badge ${app.isEditorChoice ? 'badge-primary' : 'badge-pink'}`}>
        {app.badge}
      </span>
    </div>
  )}
  
  <div class="card-header">
    <div class="app-logo">{app.logo}</div>
    <div class="app-info">
      <h3 class="app-name">
        <a href={`/apps/${app.slug}`}>{app.name}</a>
      </h3>
      <p class="app-best-for"><strong>Best for:</strong> {app.bestFor}</p>
      <div class="app-rating">
        <div class="star-rating">
          {Array(fullStars).fill(0).map(() => (
            <span class="star filled">‚òÖ</span>
          ))}
          {hasHalfStar && <span class="star half">‚òÖ</span>}
          {Array(emptyStars).fill(0).map(() => (
            <span class="star">‚òÖ</span>
          ))}
        </div>
        <span class="rating-value">{app.rating}</span>
        <span class="category-tag">{app.category}</span>
      </div>
    </div>
  </div>
  
  <div class="app-description">
    <p>{app.description}</p>
  </div>
  
  <div class="what-makes-different">
    <h4>What makes it different:</h4>
    <ul>
      {app.whatMakesDifferent.map((item) => (
        <li>{item}</li>
      ))}
    </ul>
  </div>
  
  <div class="pricing-section">
    <h4>Pricing</h4>
    <div class="pricing-content">
      <div class="price-main">
        <span class="price-value">{app.pricing.starting}</span>
        {app.pricing.free && <span class="free-badge">Free Tier Available</span>}
      </div>
      <p class="price-details">{app.pricing.premium}</p>
    </div>
  </div>
  
  <div class="pros-cons">
    <div class="pros">
      <h4>üëç Pros</h4>
      <ul>
        {app.pros.map((pro) => (
          <li>{pro}</li>
        ))}
      </ul>
    </div>
    <div class="cons">
      <h4>üëé Cons</h4>
      <ul>
        {app.cons.map((con) => (
          <li>{con}</li>
        ))}
      </ul>
    </div>
  </div>
  
  <div class="best-fit">
    <p><strong>Best fit:</strong> {app.bestFit}</p>
  </div>
  
  <div class="card-actions">
    <a href={app.website} class="btn btn-primary btn-lg" target="_blank" rel="noopener noreferrer">
      Visit {app.name} ‚Üó
    </a>
    <a href={`/apps/${app.slug}`} class="btn btn-secondary">
      Full Review ‚Üí
    </a>
  </div>
</article>

